<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".inventario_articulos_todos">

    <Button
        android:id="@+id/btnBack01"
        android:layout_width="150dp"
        android:layout_height="48dp"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp"
        android:text="@string/btnback"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.303"
        app:layout_constraintStart_toEndOf="@+id/TituloPedidosMovilPOS"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.024" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="360dp"
        android:layout_height="51dp"
        android:background="@drawable/custom_textview_nombre_gris"
        android:fontFamily="@font/lexend_medium"
        android:text="@string/texttodos"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TituloPedidosMovilPOS"
        app:layout_constraintVertical_bias="0.038" />

    <TextView
        android:id="@+id/TituloPedidosMovilPOS"
        android:layout_width="163dp"
        android:layout_height="45dp"
        android:background="@drawable/custom_logo"
        android:fontFamily="@font/lexend"
        android:text="@string/nombreapp"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.045"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.022" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="360dp"
        android:layout_height="470dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.138">

        <!-- Primer LinearLayout horizontal -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="139dp"
            android:orientation="horizontal">

            <!-- Coloca aquí tus vistas para la primera fila -->
            <Button
                android:layout_width="170dp"
                android:layout_height="130dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/custom_button_inventario_articulos_todos"
                android:fontFamily="@font/lexend_medium"
                android:text="Aguas"
                android:textSize="34sp" />

            <Button
                android:layout_width="170dp"
                android:layout_height="130dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/custom_button_inventario_articulos_todos"

                android:fontFamily="@font/lexend_medium"
                android:text="PLATOS"
                android:textSize="34sp" />

            <!-- Puedes agregar más vistas aquí según sea necesario -->

        </LinearLayout>

        <!-- Segundo LinearLayout horizontal -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Coloca aquí tus vistas para la segunda fila -->
            <Button
                android:layout_width="170dp"
                android:layout_height="130dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/custom_button_inventario_articulos_todos"
                android:fontFamily="@font/lexend_medium"
                android:text="TACOS"
                android:textSize="34sp" />

            <Button
                android:layout_width="170dp"
                android:layout_height="130dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/custom_button_inventario_articulos_todos"
                android:fontFamily="@font/lexend_medium"
                android:text="EXTRA"
                android:textSize="34sp" />
            <!-- Puedes agregar más vistas aquí según sea necesario -->

        </LinearLayout>

        <!-- Puedes agregar más LinearLayouts horizontales según sea necesario -->

    </LinearLayout>

    <Button
        android:id="@+id/button7"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/custom_button_agregar_circulo"
        android:text="+"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.953"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.975" />


</androidx.constraintlayout.widget.ConstraintLayout>